      public function jobComment()
    {   
        if(!empty(I("post.message"))){
        $data['jobid'] = I("post.jobid");
        $data['content']=I("post.message");
        $data['companyid']=I("post.companyid");
        $data['sid']=$_SESSION['user']['id'];

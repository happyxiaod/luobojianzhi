
/* 用户中心（有头像） */
.user_header{width:100%;height:200px;max-height:200px;position:relative;overflow:hidden;}
.user_header>img{width:100%;}
.user_header .reg_login{width:120px;height:120px;border:3px solid #d4d4d5;border-radius:800px;position:absolute;top:50%;margin-top:-85px;left:50%;margin-left:-60px;}
.reg_login img.header{width:120px;height:120px;border-radius:1000px;margin:0;}
.reg_login img.noHeader{width:85px;margin:10px auto 0;}
.reg_login span{display:block;text-align:center;margin-top:10px;color:#fff;}

section{width:100%;margin:0 0 15px;}
section a{padding:0 5%;background-color: #fff;border-bottom:1px solid #ccc;height:50px;line-height:50px;display:block;}
section a:last-child{border-bottom:0;}
section a span{background:url(../images/user.png) no-repeat 0 10px;padding-left:40px;display:block;font-size:16px;float:left;}
section a:nth-child(2) span{background-position:0 -70px;}
section a:nth-child(3) span{background-position:0 -150px;}
section a:nth-child(4) span{background-position:0 -230px;}
section a b{color:#eb7312;float:right;}

.person a:nth-child(1) span{background-position:0 -310px;}
.person a:nth-child(2) span,.company_pub a:nth-child(1) span{background-position:0 -390px;}
.person a:nth-child(3) span{background-position:0 -470px;}

.reset a:nth-child(1) span{background-position:0 -550px;}

.set_up{margin-bottom:0;margin-top:10px;}
.set_up a{margin-top:5px;border-bottom:0;}
.set_up a:nth-child(1) span{background-position:0 -630px;}
.set_up a:nth-child(2) span{background-position:0 -710px;}
.set_up a:nth-child(3) span{background-position:0 -790px;}
.set_up a:nth-child(4) span{background-position:0 -950px;}
.company_pub a:nth-child(2) span{background-position:0 -1030px;}

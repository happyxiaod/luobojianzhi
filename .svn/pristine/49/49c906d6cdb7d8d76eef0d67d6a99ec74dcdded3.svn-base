#daohang {
    background: #4693ca;
}

ul#nav {

    height: 40px;
    margin: 0 auto
}

ul#nav li {
    display: inline;
    height: 40px
}

ul#nav li a {
    display: inline-block;
    padding: 0 20px;
    height: 40px;
    line-height: 40px;
    color: #FFF;
    font-family: "\5FAE\8F6F\96C5\9ED1";
    font-size: 15px
}

ul#nav li a:hover {
    background: #50b9e7
}

/*设置鼠标滑过或悬停时变化的背景颜色*/
body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
}
img {
    border: none;
}

/**{font-family:'微软雅黑';font-size:12px;color:#626262;}*/
dl, dt, dd {
    display: block;
    margin: 0;
}

a {
    text-decoration: none;
}

/*left*/
.leftsidebar_box {
    width: 160px;
    overflow: visible !important;
    position: fixed;
    height: 100% !important;
    background-color: white;
    border: 2px solid #ccc;
    margin: 0 1% 1% 0;
}

.line {
    width: 100%;;
    background-repeat: repeat-x;
    color: #0080c4;
    background-color: #e5e5e5;
    border: 1px solid #ccc;
    font-size: 20px;
    text-align: center;
    font-weight: bold
}

.leftsidebar_box dt {
    padding-left: 40px;
    padding-right: 10px;
    background-repeat: no-repeat;
    background-position: 10px center;
    color: #0080c4;
    font-size: 14px;
    position: relative;
    line-height: 48px;
    cursor: pointer;
}

.leftsidebar_box dd {
    background-color: white;
    padding-left: 40px;
}

.leftsidebar_box dd a {
    color: #0080c4;
    line-height: 20px;
}

.leftsidebar_box dt img {
    position: absolute;
    right: 10px;
    top: 20px;
}

.container {
    padding-left: 0px
}

.leftsidebar_box dl dd:last-child {
    padding-bottom: 10px;
}
